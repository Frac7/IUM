<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="1dp"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <Space
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/corone"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/ic_home_corone_nospace" />

        <ImageView
            android:id="@+id/carte"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/ic_home_donazioni_nospace" />

        <ImageView
            android:id="@+id/coppe"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/ic_home_trofei_nospace" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:padding="5dp"
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="125dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✌Peaceman✌"
                android:textSize="9pt"/>

            <TextView
                android:id="@+id/grado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capo"
                android:textSize="6pt"/>

        </LinearLayout>

        <TextView
            android:id="@+id/n_corone"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="9pt"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/n_donazioni"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="150"
            android:textSize="9pt"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/n_trofei"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4000"
            android:textSize="9pt"
            android:textAlignment="center"/>

    </TableRow>

</TableLayout>