<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ium.project.clanmanagerforclashroyale.ClanManager"
    tools:showIn="@layout/app_bar_clan_manager">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ium.project.clanmanagerforclashroyale.ClanManager">
        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filtra membri per:"
                        android:textSize="8pt"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        app:srcCompat="@drawable/ic_home_corone_nospace" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Corone baule "
                        android:textSize="8pt"
                        android:layout_gravity="bottom"/>

                    <android.support.v4.widget.Space
                        android:layout_width="65dp"
                        android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/editText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="MIN"
                            android:layout_marginRight="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_gravity="bottom"
                            android:inputType="number" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="MAX"
                            android:layout_gravity="bottom"
                            android:inputType="number" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        app:srcCompat="@drawable/ic_home_donazioni_nospace" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donazioni "
                        android:textSize="8pt"
                        android:layout_gravity="bottom"/>

                    <android.support.v4.widget.Space
                        android:layout_width="92dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="15dp"
                        android:hint="MIN"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="MAX"
                        android:inputType="number" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        app:srcCompat="@drawable/ic_home_trofei_nospace" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Trofei "
                        android:textSize="8pt" />

                    <android.support.v4.widget.Space
                        android:layout_width="123dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="15dp"
                        android:hint="MIN"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_gravity="bottom"
                        android:hint="MAX"/>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtra membri"
                    android:layout_gravity="center"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:layout_gravity="center_horizontal"
                    android:text="Statistiche della settimana corrente:"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                            <Space />

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_weight="1"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                app:srcCompat="@drawable/ic_home_corone_nospace" />

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_weight="1"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                app:srcCompat="@drawable/ic_home_donazioni_nospace" />

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_weight="1"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                app:srcCompat="@drawable/ic_home_trofei_nospace" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:padding="10dp"
                        android:background="#66d1ffd5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="✌Peaceman✌"
                            android:textSize="8pt"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="8pt"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="150"
                            android:textSize="8pt"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="4000"
                            android:textSize="8pt"
                            android:textAlignment="center"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:padding="10dp"
                        android:background="#66d1ffd5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_promuovi_bottone"
                            android:text="Promuovi" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_espelli_bottone"
                            android:text="Espelli" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <Space />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_home_corone_nospace" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_home_donazioni_nospace" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_home_trofei_nospace" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:padding="10dp"
                        android:background="#66efefef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="xFatal1991x"
                            android:textSize="8pt"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textSize="8pt"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="300"
                            android:textSize="8pt"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="4000"
                            android:textSize="8pt"
                            android:textAlignment="center"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:padding="10dp"
                        android:background="#66efefef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_promuovi_bottone"
                            android:text="Promuovi" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_espelli_bottone"
                            android:text="Espelli" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <Space />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_home_corone_nospace" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_home_donazioni_nospace" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_home_trofei_nospace" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#66ffd1d1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="TrissMerigold"
                            android:textSize="8pt"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="8pt"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="8pt"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="3400"
                            android:textSize="8pt"
                            android:textAlignment="center"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#66ffd1d1">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_promuovi_bottone"
                            android:text="Promuovi" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_espelli_bottone"
                            android:text="Espelli" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
