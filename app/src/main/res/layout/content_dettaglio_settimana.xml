<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ium.project.clanmanagerforclashroyale.DettaglioSettimana"
    tools:showIn="@layout/activity_dettaglio_settimana">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ium.project.clanmanagerforclashroyale.ClanManager">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/content_home_clan_stat"
                    android:background="#50efefef"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/content_home_clan_trofei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/trofei"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:padding="4px"
                            app:srcCompat="@drawable/ic_home_trofei_nospace" />

                        <TextView
                            android:id="@+id/trofei_home_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trofei"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="8pt" />

                        <TextView
                            android:id="@+id/trofei_home_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1534"
                            android:layout_gravity="center"
                            android:textSize="8pt" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/content_home_clan_donazioni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/donazioni"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_home_donazioni_nospace" />

                        <TextView
                            android:id="@+id/donazioni_home_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Donazioni"
                            android:layout_gravity="center"
                            android:textSize="8pt" />

                        <TextView
                            android:id="@+id/donazioni_home_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_gravity="center"
                            android:textSize="8pt" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/content_home_clan_membri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/membri"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_home_membri_nospace" />

                        <TextView
                            android:id="@+id/membri_home_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Membri"
                            android:layout_gravity="center"
                            android:textSize="8pt" />

                        <TextView
                            android:id="@+id/membri_home_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_gravity="center"
                            android:textSize="8pt" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/content_home_clan_baule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/baule"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_0" />

                        <TextView
                            android:id="@+id/baule_home_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Baule"
                            android:layout_gravity="center"
                            android:textSize="8pt" />

                        <TextView
                            android:id="@+id/baule_home_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_gravity="center"
                            android:textSize="8pt" />

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:background="#50efefef"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_home_corone_nospace" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Corone baule"
                            android:textSize="9pt"
                            android:layout_gravity="center"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/min_corone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_toStartOf="@id/max_corone"
                                android:layout_toLeftOf="@id/max_corone"
                                android:hint="MIN"
                                android:inputType="number" />

                            <EditText
                                android:id="@+id/max_corone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_alignParentRight="true"
                                android:hint="MAX"
                                android:inputType="number" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_home_donazioni_nospace" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Donazioni"
                            android:textSize="9pt"
                            android:layout_gravity="center"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/min_donazioni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_toStartOf="@id/max_donazioni"
                                android:layout_toLeftOf="@id/max_donazioni"
                                android:hint="MIN"
                                android:inputType="number" />

                            <EditText
                                android:id="@+id/max_donazioni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_alignParentRight="true"
                                android:hint="MAX"
                                android:inputType="number" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_home_trofei_nospace" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Trofei"
                            android:textSize="9pt" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/min_trofei"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_toStartOf="@id/max_trofei"
                                android:layout_toLeftOf="@id/max_trofei"
                                android:hint="MIN"
                                android:inputType="number" />

                            <EditText
                                android:id="@+id/max_trofei"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_alignParentRight="true"
                                android:hint="MAX"
                                android:inputType="number" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/filtra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Filtra membri"
                            android:layout_gravity="center"/>

                        <Space
                            android:layout_width="20dp"
                            android:layout_height="match_parent" />

                        <Button
                            android:id="@+id/pulisci"
                            android:background="#00ffffff"
                            android:textSize="5pt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulisci campi"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <ListView
                    android:id="@+id/clan_manager_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>

            </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
