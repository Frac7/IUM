<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    tools:context="ium.project.clanmanagerforclashroyale.BlankFragment2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parametri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/parametri_corone"
                            android:background="@drawable/testo_no_titolo_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:padding="5dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_home_corone_nospace" />

                            <TextView
                                android:textColor="@color/textColor"
                                android:id="@+id/corone"
                                android:textAlignment="center"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45 - 100"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/parametri_donazioni"
                            android:background="@drawable/testo_no_titolo_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:padding="5dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_home_donazioni_nospace" />

                            <TextView
                                android:textColor="@color/textColor"
                                android:id="@+id/donazioni"
                                android:textAlignment="center"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45 - 100"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/parametri_trofei"
                            android:background="@drawable/testo_no_titolo_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:padding="5dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_home_trofei_nospace" />

                            <TextView
                                android:textColor="@color/textColor"
                                android:id="@+id/trofei"
                                android:textAlignment="center"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45 - 100"/>

                        </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:id="@+id/parametri_ordinamento"
                        android:background="@drawable/testo_no_titolo_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ordinamento_img"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_home_trofei_nospace" />

                        <TextView
                            android:textColor="@color/textColor"
                            android:id="@+id/ordinamento"
                            android:textAlignment="center"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crescente"/>

                </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/clan_manager_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>

            </LinearLayout>

        </LinearLayout>

</FrameLayout>
