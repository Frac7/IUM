<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_click" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualizza"
            android:textSize="9pt"
            android:textAlignment="center"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/settimana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="15/01/18 - 21/01/18"
            android:textSize="9pt"
            android:textStyle="bold"
            android:padding="10dp"/>

    </LinearLayout>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_baule"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_home_donazioni_nospace" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_promuovi" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_espelli" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:background="#66efefef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_baule_1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textSize="9pt"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:text="0"/>

        <TextView
            android:id="@+id/text_donazioni_1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textSize="9pt"
            android:text="0"/>

        <TextView
            android:id="@+id/text_promozioni_1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textSize="9pt"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:text="1"/>

        <TextView
            android:id="@+id/text_espulsioni_1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textSize="9pt"
            android:text="0"/>

    </TableRow>

</TableLayout>

</LinearLayout>
